.root-container
    text-align: center
    padding-top: 20px

.file.file-form
    justify-content: center
    margin-bottom: 30px   

.mockup-browser
    display: inline-block
    width: 700px
    // height: 400px
    // border: 1px solid grey
    border-radius: 1%
    box-shadow: 0px 0px 20px 0px rgba(50,50,50,0.55)
    overflow: scroll

    .toolbar
        padding: 10px 10px
        background-color: #37393A
        text-align: left

    .content
        overflow: hidden
        height: 100%
        height: 400px
        border-radius: 0 0 1% 1%

    .img
        width: 100%
        height: 100%
        background-position: top center
        // border: 1px solid red
        background-size: cover

.toolbar-buttons
    line-height: 0

.toolbar-button
    display: inline-block
    margin-right: 5px
    width: 7px
    height: 7px
    border-radius: 50%

    &.button-close
        background-color: #ff1d1d

    &.button-minimize
        background-color: #f7f758

    &.button-maximize
        background-color: #34c534