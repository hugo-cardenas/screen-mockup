{
    "name": "screen-mockup",
    "version": "0.1.0",
    "scripts": {
        "build": "webpack --config ./config/webpack.prod.js",
        "deploy": "npm run build && npm run deploy:aws",
        "deploy:aws": "aws s3 sync dist s3://hugocardenas.me/screen-mockup --exclude '.DS_Store' --delete",
        "format":
            "prettier --single-quote --tab-width 4 --write '**/*.{js,json}'",
        "start": "webpack-dev-server --open --config ./config/webpack.dev.js",
        "test": "jest test"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
                "<rootDir>/test/mocks/fileMock.js",
            "\\.(css|less|styl)$": "<rootDir>/test/mocks/styleMock.js"
        },
        "setupFiles": ["raf/polyfill"]
    },
    "description": "Create a browser mockup from a screenshot",
    "main": "index.js",
    "directories": {
        "test": "test"
    },
    "keywords": ["screen", "screenshot", "mockup", "browser", "phone"],
    "author": "Hugo CÃ¡rdenas",
    "license": "MIT",
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "clean-webpack-plugin": "^0.1.17",
        "css-loader": "^0.28.7",
        "file-loader": "^1.1.5",
        "html-webpack-plugin": "^2.30.1",
        "jest": "^21.2.1",
        "prettier": "^1.9.2",
        "raf": "^3.4.0",
        "style-loader": "^0.19.0",
        "stylus": "^0.54.5",
        "stylus-loader": "^3.0.1",
        "uglifyjs-webpack-plugin": "^1.1.2",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.9.7",
        "webpack-merge": "^4.1.1"
    },
    "dependencies": {
        "bulma": "^0.6.1",
        "dom-to-image": "^2.6.0",
        "file-saver": "^1.3.3",
        "html2canvas": "^1.0.0-alpha.3",
        "react": "^16.2.0",
        "react-dom": "^16.2.0"
    }
}
